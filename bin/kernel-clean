#!/bin/bash

# Copyright Â© 2014 by madneon
# http://madneon.com

current=`uname -r`
aptline='sudo apt purge '

for v in `ls -1 /boot|grep -v $current|grep 'vmlinuz-'|cut -f2-3 -d'-'`; do
	for p in `dpkg --get-selections|grep "$v"|cut -f1 -d"	"`; do
		aptline="$aptline $p"
	done
done

echo
echo $aptline
echo

$aptline

# madneon 2014-12-16
