#!/bin/bash

# Copyright Â© 2018 by madneon
# http://madneon.com

# Paramaters
d_root="/opt"                        # root directory
d_log="$d_root/var/log"              # log directory
f_log="$d_log/bkp-postgresql.log"    # log file
f_in="$d_root/etc/bkp-postgresql"    # config file
d_out="$d_root/var/dump/postgresql"  # output directory
d_lock="$d_root/var/run"             # lock dir
f_lock="$d_lock/bkp-postgresql.pid"  # lock file
login="postgres"                     # database login

# Check if locked
if [ -e $f_lock ]; then
	echo -n "Alredy running, pid "
	cat $f_lock
	exit 1
fi

# Lock
if [ ! -d "$d_lock" ]; then
	mkdir -p "$d_lock"
	chmod 700 "$d_lock"
fi
echo $$ > $f_lock

# Specified config
if [ "$1"X != X ]; then
	f_in=$1
fi

# Load config
if [ -f $f_in ]; then
	. $f_in
fi

# Log
if [ ! -d "$d_log" ]; then
	mkdir -p "$d_log"
	chmod 700 "$d_log"
fi

echo -en "\nStart ($$): " >> $f_log
date +"%F %T" >> $f_log

# Create output directory
if [ ! -d "$d_out" ]; then
	mkdir -p "$d_out"
	chmod 700 "$d_out"
fi

cd $d_out
rm *.sql 2> /dev/null || echo > /dev/null

# Load list of databases
dbs=`su -c "psql -qAtc 'SELECT datname FROM pg_database'" - $login|egrep -v 'template[01]'`

for db in $dbs; do
	# dump
	su -c "pg_dump -bcCo $db" - $login > $db.sql

	r=$?

	# log result
	if [ $r == 0 ]; then
		s=`stat -c %s $db.sql`
		echo -e "$s\t$db.sql" >> $f_log
	fi
done

# Log finish time
echo -en "Finish ($$): " >> $f_log
date +"%F %T" >> $f_log

# Unlock
rm $f_lock

# madneon 2018-11-26
