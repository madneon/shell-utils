#!/bin/bash

# Copyright Â© 2014,2020 by madneon
# http://madneon.com

function ck() {
	for p in $children; do
		pkill -P $p 2>&1 > /dev/null
	done
	exit
}

function do_space() {
	while true; do
		sleep 10
		#echo -en "."
		echo
	done
}

function do_read() {
		while read l; do
			echo -e "\r$1|$l"
		done
}

function doone() {
	tail -f $1 -n 0 --pid=$$|do_read "$1"
}

files=""
for f in `find -type f|grep -v ".gz$"`; do
	files="$files\n"${f:2}
done
maxlen=`echo -e "$files"|wc -L`

trap ck INT

children=""
for f in `find -type f|grep -v ".gz$"`; do
	t=`printf "%"$maxlen"s" ${f:2}`
#	doone "$f" &
	tail -f "$f" -n 0 --pid=$$|do_read "$t" &
	children="$children $!"
done

if [ -n "$children" ]; then
	if [ "$1"x != "-s"x ]; then
		do_space
	fi
	children="$children $!"
	wait
fi

# madneon 2014-03-01, 2020-04-03
